{
  "$schema": "https://json.schemastore.org/package",
  "name": "cs-bot-v3",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app/index.js",
  "scripts": {
    "dev": "tsx watch src/app/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node .",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "dc:up": "docker compose up -d",
    "dc:down": "docker compose down",
    "dc:logs": "docker compose logs -f db",
    "dc:logs:db": "docker compose logs -f db",
    "dc:logs:vector": "docker compose logs -f vectorizer-worker",
    "dc:logs:ollama": "docker compose logs -f ollama",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:deploy": "npx prisma migrate deploy && npx prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/N8WM/cs-bot-v3.git"
  },
  "author": "Nathan McCutchen",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/N8WM/cs-bot-v3/issues"
  },
  "homepage": "https://github.com/N8WM/cs-bot-v3#readme",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "discord.js": "^14.20.0",
    "dotenv": "^16.5.0",
    "moment": "^2.30.1",
    "mysql2": "^3.14.1",
    "ollama": "^0.5.17",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "jest": "^30.0.5",
    "prisma": "^6.12.0",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3"
  },
  "prisma": {
    "schema": "./prisma"
  }
}
