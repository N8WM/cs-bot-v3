model Guild {
  snowflake    String   @id
  contactEmail String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  verifySettings VerifySettings?
  verifiedUsers  User[]
  topics         Topic[]
  messages       Message[]
}

model VerifySettings {
  guildSnowflake String   @id
  roleId         String
  suffix         String
  createdAt      DateTime @default(now())

  guild Guild @relation(fields: [guildSnowflake], references: [snowflake])
}
